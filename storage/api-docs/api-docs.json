                            "example": "asc"
                        }
                    },
                    {
                        "name": "search_for",
                        "in": "query",
                        "description": "Search term",
                        "required": false,
                        "schema": {
                            "type": "string",
                            "example": "conference"
                        }
                    },
                    {
                        "name": "search_in",
                        "in": "query",
                        "description": "Fields to search in (comma-separated or 'all')",
