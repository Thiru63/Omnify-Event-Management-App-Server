    "components": {
        "schemas": {
            "CreateEventRequest": {
                "required": [
                    "name",
                    "location",
                    "start_time",
                    "end_time",
                    "max_capacity"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Tech Conference 2024"
                    },
                    "location": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "Bangalore Convention Center"
                    },
                    "start_time": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-12-01 09:00:00"
                    },
                    "end_time": {
                        "type": "string",
                        "format": "date-time",
                        "example": "2024-12-01 17:00:00"
                    },
                    "max_capacity": {
                        "type": "integer",
                        "maximum": 10000,
                        "minimum": 1,
                        "example": 100
                    }
                },
                "type": "object"
            },
            "RegisterAttendeeRequest": {
                "required": [
                    "name",
                    "email"
                ],
                "properties": {
                    "name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "John Doe"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "maxLength": 255,
                        "example": "john@example.com"
                    }
                },
                "type": "object"
            },
            "Attendee": {
                "required": [
                    "id",
                    "event_id",
                    "name",
                    "email"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "event_id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
                        "maxLength": 255,
                        "example": "John Doe"
                    },
                    "email": {
                        "type": "string",
                        "format": "email",
                        "maxLength": 255,
                        "example": "john@example.com"
                    },
                    "created_at": {
                        "type": "string",
                        "format": "date-time"
                    },
                    "updated_at": {
                        "type": "string",
                        "format": "date-time"
                    }
                },
                "type": "object"
            },
            "Event": {
                "required": [
                    "id",
                    "name",
                    "location",
                    "start_time",
                    "end_time",
                    "max_capacity",
                    "current_attendees"
                ],
                "properties": {
                    "id": {
                        "type": "integer",
                        "format": "int64",
                        "example": 1
                    },
                    "name": {
                        "type": "string",
