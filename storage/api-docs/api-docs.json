                    }
                ],
                "responses": {
                    "200": {
                        "description": "Events retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Events retrieved successfully"
                                        },
                                        "data": {
                                            "properties": {
                                                "data": {
                                                    "type": "array",
                                                    "items": {
                                                        "properties": {
                                                            "id": {
                                                                "type": "integer",
                                                                "example": 1
                                                            },
                                                            "name": {
                                                                "type": "string",
                                                                "example": "Tech Conference 2024"
                                                            },
                                                            "location": {
                                                                "type": "string",
                                                                "example": "Bangalore"
                                                            },
                                                            "start_time": {
                                                                "type": "string",
                                                                "format": "date-time",
                                                                "example": "2024-12-20T10:00:00+05:30"
                                                            },
                                                            "end_time": {
                                                                "type": "string",
                                                                "format": "date-time",
                                                                "example": "2024-12-20T17:00:00+05:30"
                                                            },
                                                            "max_capacity": {
                                                                "type": "integer",
                                                                "example": 100
                                                            },
                                                            "current_attendees": {
                                                                "type": "integer",
                                                                "example": 25
                                                            },
                                                            "available_capacity": {
                                                                "type": "integer",
                                                                "example": 75
                                                            }
                                                        },
                                                        "type": "object"
                                                    }
                                                },
                                                "pagination": {
                                                    "properties": {
                                                        "current_page": {
                                                            "type": "integer",
                                                            "example": 1
                                                        },
                                                        "per_page": {
                                                            "type": "integer",
                                                            "example": 10
                                                        },
                                                        "total": {
                                                            "type": "integer",
                                                            "example": 50
                                                        },
                                                        "last_page": {
                                                            "type": "integer",
                                                            "example": 5
                                                        },
                                                        "from": {
                                                            "type": "integer",
                                                            "example": 1
                                                        },
                                                        "to": {
                                                            "type": "integer",
                                                            "example": 10
                                                        }
                                                    },
                                                    "type": "object"
                                                },
                                                "filters_applied": {
                                                    "properties": {
                                                        "sort_by": {
                                                            "type": "string",
                                                            "example": "start_time"
                                                        },
                                                        "sort_order": {
                                                            "type": "string",
                                                            "example": "asc"
                                                        },
                                                        "search_for": {
                                                            "type": "string",
                                                            "example": null
                                                        },
                                                        "search_in": {
                                                            "type": "string",
                                                            "example": "name"
                                                        },
                                                        "filter_by_location": {
                                                            "type": "array",
                                                            "items": {
                                                                "type": "string"
                                                            },
                                                            "example": null
                                                        },
                                                        "seat_available_events": {
                                                            "type": "boolean",
                                                            "example": false
                                                        }
                                                    },
                                                    "type": "object"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Invalid timezone or parameters",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Invalid timezone provided"
                                        },
                                        "error": {
                                            "type": "string",
                                            "example": "Timezone must be a valid PHP timezone identifier"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Internal server error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Failed to retrieve events"
                                        },
                                        "error": {
                                            "type": "string",
                                            "example": "Database connection failed"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    }
                }
            },
            "post": {
                "tags": [
                    "Events"
                ],
                "summary": "Create a new event",
                "description": "Creates a new event with the provided details. All events are stored in IST timezone.",
                "operationId": "createEvent",
                "requestBody": {
                    "description": "Event creation data",
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "required": [
                                    "name",
                                    "location",
                                    "start_time",
                                    "end_time",
                                    "max_capacity"
                                ],
                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "maxLength": 255,
                                        "example": "Tech Conference 2024"
                                    },
                                    "location": {
                                        "type": "string",
                                        "maxLength": 255,
                                        "example": "Bangalore Convention Center"
                                    },
                                    "start_time": {
                                        "description": "Start time in Y-m-d H:i:s format (IST timezone)",
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2024-12-20 10:00:00"
                                    },
                                    "end_time": {
                                        "description": "End time in Y-m-d H:i:s format (must be after start_time)",
                                        "type": "string",
                                        "format": "date-time",
                                        "example": "2024-12-20 17:00:00"
                                    },
                                    "max_capacity": {
                                        "description": "Maximum number of attendees allowed",
                                        "type": "integer",
                                        "minimum": 1,
                                        "example": 100
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Event created successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": true
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "Event created successfully"
                                        },
                                        "data": {
                                            "properties": {
                                                "id": {
                                                    "type": "integer",
                                                    "example": 1
                                                },
                                                "name": {
                                                    "type": "string",
                                                    "example": "Tech Conference 2024"
                                                },
                                                "location": {
                                                    "type": "string",
                                                    "example": "Bangalore Convention Center"
                                                },
                                                "start_time": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2024-12-20T10:00:00.000000Z"
                                                },
                                                "end_time": {
                                                    "type": "string",
                                                    "format": "date-time",
                                                    "example": "2024-12-20T17:00:00.000000Z"
                                                },
                                                "max_capacity": {
                                                    "type": "integer",
                                                    "example": 100
                                                },
                                                "current_attendees": {
                                                    "type": "integer",
                                                    "example": 0
                                                },
                                                "created_at": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                },
                                                "updated_at": {
                                                    "type": "string",
                                                    "format": "date-time"
                                                }
                                            },
                                            "type": "object"
                                        }
                                    },
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "422": {
                        "description": "Validation error",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "properties": {
                                        "success": {
                                            "type": "boolean",
                                            "example": false
                                        },
                                        "message": {
                                            "type": "string",
                                            "example": "The given data was invalid"
                                        },
                                        "errors": {
                                            "properties": {
                                                "name": {
                                                    "type": "array",
